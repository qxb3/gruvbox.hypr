{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "experimentalDecorators": true,
    "strict": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "checkJs": false,
    "allowJs": false,
    "jsx": "react-jsx",
    "jsxImportSource": "/usr/share/astal/gjs/gtk3",
    "paths": {
      "astal": ["/usr/share/astal/gjs"],
      "astal/*": ["/usr/share/astal/gjs/*"],
      "@root/*": ["./*"],
      "@assets/*": ["./assets/*"],
      "@widgets/*": ["./widgets/*"],
      "@services/*": ["./services/*"],
      "@windows/*": ["./windows/*"]
    }
  }
}
